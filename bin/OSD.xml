<window name="TVChannelSetup">
	<keys>
		<Key code= 13>Select()</>
		<Key code= 37>Left()</>
		<Key code= 38>Up()</>
		<Key code= 39>Right()</>
		<Key code= 40>Down()</>
	</keys>
	<label>
		<pos x=384 y=40 />
		<text>TV Channel Setup</text>
		<font height=40 weight=700 color="#FFFFFF" />
		<align horizontal="centre"/>
	</label>
	<list name="MenuOptions">
		<pos x=100 y=100 />
		<size width=568 height=376 />

		<itemTemplate>
			<height>50</height>
			<gap>10</gap>
			<font height=40 weight=700 color="#FFFFFF" />
			<align horizontal="centre"/>
			<background>
				<image>BrownButton</image>
				<highlightImage>GreenButton</highlightImage>
			</background>
		</itemTemplate>

		<item>
			<height>60</height>
			<gap>40</gap>
			<font height=40 weight=700 color="#FFFFFF" />
			<text>Add Network</text>
			<onSelect>
				ExitMenu(-1)
				ShowMenu(TVAddNetwork)
			</onSelect>
		</item>
		<!--
		<item>
			<text>Reorder</text>
			<onSelect>
				ExitMenu(-1)
			</onSelect>
		</item>
		-->
		<itemList>
			<source>TVChannels.Networks</source>
			<text>$(TVChannels.Network.name)</text>
			<onSelect>SetChannel($(TVChannels.Network.transportStreamId)) ExitMenu()</onSelect>
			<onLeft>
				MoveNetworkUp($(TVChannels.Network.transportStreamId))
				Up()
			</onLeft>
			<onRight>
				MoveNetworkDown($(TVChannels.Network.transportStreamId))
				Down()
			</onRight>
		</itemList>
	</list>
	<label>
		<pos x=384 y=500 />
		<text>use left and right arrows to change network order</text>
		<font height=20 weight=700 color="#FFFFFF" />
		<align horizontal="centre"/>
	</label>
</window>

<window name="TVAddNetwork">
	<keys>
		<Key code= 13>Select()</>
		<Key code= 37>Left()</>
		<Key code= 38>Up()</>
		<Key code= 39>Right()</>
		<Key code= 40>Down()</>
	</keys>
	<label>
		<pos x=50 y=40 />
		<text>TV Add Network</text>
		<font height=40 weight=700 color="#FFFFFF" />
		<align horizontal="left"/>
	</label>
	<list name="MenuOptions">
		<pos x=50 y=100 />
		<size width=168 height=376 />

		<itemTemplate>
			<height>40</height>
			<gap>10</gap>
			<font height=30 weight=700 color="#FFFFFF" />
			<align horizontal="left"/>
			<background>
				<image>BrownButton</image>
				<highlightImage>GreenButton</highlightImage>
			</background>
			<onRight>ChangeFrequencySelectionOffset(1)</onRight>
			<onLeft>ChangeFrequencySelectionOffset(-1)</onLeft>
		</itemTemplate>

		<itemList>
			<source>FrequencyList</source>
			<text>   $(FrequencyList.frequency)  ($(FrequencyList.bandwidth))</text>
			<onSelect>
				SetFrequency($(FrequencyList.frequency), $(FrequencyList.bandwidth))
			</onSelect>
		</itemList>
	</list>
	<label>
		<pos x=50 y=500 />
		<text>use left and right arrows to change offset</text>
		<font height=20 weight=700 color="#FFFFFF" />
		<align horizontal="left"/>
	</label>
	<label>
		<pos x=750 y=470 />
		<text>$(Scanning)</text>
		<font height=40 color="#FFFFFF" />
		<align horizontal="right" vertical="bottom" />
		<background>
			<image>BrownButton</image>
			<padding left=10 top=0 right=10 bottom=3 />
		</background>
	</label>
</window>



<window name="ChannelSelect">
	<keys>
		<Key code= 13>Select()</>
		<Key code= 37>Left()</>
		<Key code= 38>Up()</>
		<Key code= 39>Right()</>
		<Key code= 40>Down()</>
	</keys>

	<label>
		<pos x=340 y=35 />
		<text>Network</text>
		<font height=30 weight=700 color="#FFFFFF" />
	</label>
	<button name="NetworkDown">
		<pos x=444 y=20 />
		<size width=150 height=60 />
		<text>Previous</text>
		<font height=30 weight=700 color="#FFFFFF" />
		<background>
			<image>BrownButton</image>
			<highlightImage>GreenButton</highlightImage>
		</background>
		<highlight default=1>
			<onSelect>NetworkDown() ExitMenu(-1)</onSelect>
			<onRight>#NetworkUp</onRight>
			<onDown>#ProgramDown</onDown>
		</highlight>
	</button>
	<button name="NetworkUp">
		<pos x=596 y=20 />
		<size width=150 height=60 />
		<text>Next</text>
		<font height=30 weight=700 color="#FFFFFF" />
		<background>
			<image>BrownButton</image>
			<highlightImage>GreenButton</highlightImage>
		</background>
		<highlight>
			<onSelect>NetworkUp() ExitMenu(-1)</onSelect>
			<onLeft>#NetworkDown</onLeft>
			<onDown>#ProgramUp</onDown>
		</highlight>
	</button>
		
	<label>
		<pos x=340 y=105 />
		<text>Program</text>
		<font height=30 weight=700 color="#FFFFFF" />
	</label>
	<button name="ProgramDown">
		<pos x=444 y=90 />
		<size width=150 height=60 />
		<text>Previous</text>
		<font height=30 weight=700 color="#FFFFFF" />
		<background>
			<image>BrownButton</image>
			<highlightImage>GreenButton</highlightImage>
		</background>
		<highlight>
			<onSelect>ProgramDown() ExitMenu(-1)</onSelect>
			<onRight>#ProgramUp</onRight>
			<onUp>#NetworkDown</onUp>
		</highlight>
	</button>
	<button name="ProgramUp">
		<pos x=596 y=90 />
		<size width=150 height=60 />
		<text>Next</text>
		<font height=30 weight=700 color="#FFFFFF" />
		<background>
			<image>BrownButton</image>
			<highlightImage>GreenButton</highlightImage>
		</background>
		<highlight>
			<onSelect>ProgramUp() ExitMenu(-1)</onSelect>
			<onLeft>#ProgramDown</onLeft>
			<onUp>#NetworkUp</onUp>
		</highlight>
	</button>
</window>

<window name="NetworkList">
