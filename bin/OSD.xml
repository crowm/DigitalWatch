<image name="BrownButton">
	<filename>images\brown-button.bmp</filename>
	<colorkey>#000000</colorkey>
	<!--<stretchArea left=17 top=17 right=408 bottom=49 />-->
	<stretchArea left=17 right=408 />
</image>

<window name="Time">
	<label>
		<pos x=100 y=100 />
		<text height=30 weight=400 color="#FFFFFF">Testing time window</text>
		<background>
			<image>BrownButton</image>
			<padding left=10 top=0 right=10 bottom=3 />
		</background>
	</label>
</window>

<window name="Messages">
	<listbox>
		<pos x=10 y=10 />
		<size width=500 height=500 />
		
		<items>#messages</items>
		
		<textColor>#FFFFFF</textColor>
		<backColor>#505050</backColor>
	</listbox>
</window>

<window name="MainMenu">
	<button>
		<pos x=100 y=100 />
		<text>Watch TV</text>
		<onClick>SetSource(TV)</onClick>
	</button>
</window>

<window name="MessageBox">
	<button>
		<pos x=100 y=100 />
		<background color=#1109B3" />
		<border color="#A1A1A1" width=5 />
		<text color="#FFFFFF">#MessageBox</text>
	</button>
</window>

<window name="TVOverlay">
	<image>
		<pos x=0 y=476 />
		<size width=768 height=100 />
		<filename>images\background.bmp</filename>
	</image>
	<label>
		<pos x=20 y=486 />
		<size width=400 height=20 />
		<text>#CurrentNetwork</text>
	</label>
</window>

