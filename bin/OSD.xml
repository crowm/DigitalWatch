		<Key code= 39>Right()</>
		<Key code= 40>Down()</>
	</keys>
	<list name="MenuOptions">
		<pos x=100 y=50 />
		<size width=568 height=476 />
		
		<itemTemplate>
			<height>60</height>
			<gap>20</gap>
			<font height=40 weight=700 color="#FFFFFF" />
			<align horizontal="centre"/>
			<background>
				<image>BrownButton</image>
				<highlightImage>GreenButton</highlightImage>
