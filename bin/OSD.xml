<window name="MainMenu">
	<keys>
		<Key code= 13>Select()</>
		<Key code= 37>Left()</>
		<Key code= 38>Up()</>
		<Key code= 39>Right()</>
		<Key code= 40>Down()</>
	</keys>
	<label>
		<pos x=384 y=40 />
		<text>Main Menu</text>
		<font height=40 weight=700 color="#FFFFFF" />
		<align horizontal="centre"/>
		<!--
		<background>
			<image>BrownBackground</image>
			<padding left=250 right=250 top=20 bottom=470 />
		</background>
		-->
	</label>
	<list name="MenuOptions">
